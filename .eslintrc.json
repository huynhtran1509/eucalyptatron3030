{
  "extends": "airbnb-base",
  "parser": "babel-eslint",
  "env": {
    "browser": false,
    "node": true,
    "es6": true,
    "mocha": true
  },
  "plugins": [
    "import",
    "flowtype-errors"
  ],
  "rules": {
    "comma-dangle": 0,
    "flowtype-errors/show-errors": 2,
    "no-void": 1,
    "no-confusing-arrow": [
      "error",
      {
        "allowParens": true
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "babel-module": {}
    }
  }
}